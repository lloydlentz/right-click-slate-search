{
  "name": "Right-click to search Slate - by Lloyd",
  "description": "Highlight text (Name, Email, ID) on a webpage, rightclick, then choose search slate",
  "version": "0.1.0",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "icons": {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "manifest_version": 2
}